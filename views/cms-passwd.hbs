    $(function () {

        $('[data-target="#modal-upload-image"]').on('click', function (e) {
            slides_id = parseInt($(e.target).data('slides-id')); });
    });
    function updatePass(){
        var name = $('#username').val();
        var new1 = $('#new1').val();
        var new2 = $('#new2').val();

        if (new1 !== new2){
            alert('两次密码不一致!');
            return false;
        }
        else{
            var request = $.ajax({
                url: "/admin/updatePasswd/",
                type: "POST",
                data: {
                    username: name,
                    passwd: new1
                }
            });
            request.done(function(msg) {
                alert('更新成功');
                window.location.href = "/admin/updatePasswd/";
            });
            request.fail(function(jqXHR, textStatus) {
                alert("Request failed: " + textStatus);
            });
        }

    };
