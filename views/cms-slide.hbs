<script>
    $(document).ready(function () {
        $($('#side-menu li ul').children('li')[0]).removeClass('active')
    });
    function submitForm(){
        var com = $('#com').val();
        var addr = $('#addr').val();
        var name = $('#name').val();
        var position = $('#position').val();
        var postcode = $('#postcode').val();
        var request = $.ajax({
            url: "/admin/updateInfo/",
            type: "POST",
            data: {
                com: com,
                addr: addr,
                name: name,
                position: position,
                postcode: postcode
            }
        });
        request.done(function(msg) {
            alert('更新成功');
            window.location.href = "/admin/cms/6";
        });
        request.fail(function(jqXHR, textStatus) {
            alert("Request failed: " + textStatus);
        });
    }
</script>
