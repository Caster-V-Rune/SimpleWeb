<script>
    $(function () {
        var slides_id = -1;
        imageUpload({
            'slides_id': function () {
                return slides_id; },
        });

        $('[data-target="#modal-upload-image"]').on('click', function (e) {
            slides_id = parseInt($(e.target).data('slides-id')); });
    });
    function updateLink(i){
        var l = $('#section'+i).val();
        var request = $.ajax({
            url: "/admin/updateSectionLink/",
            type: "POST",
            data: {
                id: i,
                link: l
            }
        });
        request.done(function(msg) {
            alert('更新成功');
            window.location.href = "/admin/cms/";
        });
        request.fail(function(jqXHR, textStatus) {
            alert("Request failed: " + textStatus);
        });
    };
</script>

